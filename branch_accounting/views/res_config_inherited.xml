<odoo>
    <data>
        <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2 style="background-color:#e1e3e6; padding-left:30px">Branch Accounting</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Advance Adjustment Account">
                            <div class="o_setting_right_pane">
                                <group>
                                    <field name="inter_branch_journal"/>
                                    <field name="branch_payable_group"/>
                                    <field name="branch_receivable_group"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>